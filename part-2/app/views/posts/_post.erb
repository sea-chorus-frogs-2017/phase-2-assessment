<article class="post">
  <p>
    <%= post.body %>
  </p>

  <div class="post-details">
    <span class="post-detail" data-post-id="<%= post.id%>><%= post_tagline(post) %></span>
    <%= erb :"posts/_post_detail_vote_count", { layout: false, locals: { post: post } } %>
  </div>

  <%= erb :"posts/_post_like_form", { layout: false, locals: { post: post } } %>
</article>
