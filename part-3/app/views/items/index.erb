<div class='container'>

  <h2>Current Auctions:</h2>
  <!-- Time logic to restrict auctions is not yet implemented -->

  <% if session['user_id'] %>
    <% user = User.find(session['user_id']) %>
    <a href="/users/<%= user.id %>"><%= user.username %></a> | <a href="/session/delete">Logout</a>
  <% else %>
    <a href='/session/new'>Login</a> | <a href='/users/new'>Register</a>
  <% end %>
  <hr>

  <ol>
    <% @items.each do |item| %>
      <li>
        <a href='/items/<%= item.id %>'><%= item.name %></a>
      </li>
    <% end %>
  </ol>

</div>
