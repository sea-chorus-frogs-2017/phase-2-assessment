<h2>Welcome, <%= @user.username %></h2>

<h3>Your Auctions</h3>

<a href="/items/new">+ add an auction</a>

<% if @user.listed_items.length == 0 %>
  <p><%= "You have no items listed." %>
<% else %>
  <ul>
    <% @user.listed_items.each do |item| %>
      <li>
      <%= item.name %><a href=<%= "/users/#{@user.id}/items/#{item.id}/edit" %>>   edit   </a>
        <form id='delete-item' action=<%="/users/#{@user.id}/items/#{item.id}"%> method='POST'>
          <input type='hidden' name='_method' value='delete'>
          <input type='submit' value='delete'>
        </form>
      </li>
    <% end %>
  </ul>
<% end %>

