<div class='container'>
  <% if session['user_id'] == @user.id %>

    <h2>Welcome <%= @user.username %>!</h2>

    <% if session['user_id'] %>
      <% user = User.find(session['user_id']) %>
      <a href="/users/<%= user.id %>"><%= user.username %></a> | <a href="/session/delete">Logout</a>
    <% else %>
      <a href='/session/new'>Login</a> | <a href='/users/new'>Register</a>
    <% end %>
    <hr>

    <div class='auction'>
      <h4>Your Auctions</h4>
      <a href='/users/<%= @user.id %>/items/new'>+ add an auction</a>
      <ol>
        <% @user.items.each do |item| %>
          <li>
            <%= item.name %>
            <a href='/users/<%= @user.id %>/items/<%= item.id %>/edit'>edit</a>
            <form action='/users/<%= @user.id %>/items/<%= item.id %>' method='post'>
              <input name='_method' type='hidden' value='delete' />
              <input type='submit' value='delete this auction'>
            </form>
            <br>
          </li>
        <% end %>
      </ol>
    </div>
  <% else %>
    <p>You don't have access to this page.</p>
  <% end %>

</div>
